@using Economy.Models
@model IEnumerable<MonthlyBill>

@{
    ViewBag.Title = "Månadsbetalningar";
}


<div class="row"  style="margin-top:10px;">
    <div class="col-xs-3 col-sm-3 col-md-3">
        @Html.ActionLink("Skapa", "Create", "MonthlyInvoice")
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3">        
        <input id="monthPaymentDate" type="text" data-date-format="yyyy-mm-dd" value="@DateTime.Now.ToShortDateString()" class="datepicker"  />
        @*<div id="datetimepicker1" class="input-append date">
            <input data-format="dd/MM/yyyy hh:mm:ss" type="text"/>
            <span class="add-on">
                <i data-time-icon="icon-time" data-date-icon="icon-calendar">
                </i>
            </span>
        </div>*@
     </div>
    <div class="col-xs-3 col-sm-3 col-md-3">        
        <button id="monthlyPayments" @(ViewBag.RunButtonDisabled ? "disabled" : "")>Registrera</button>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="table-responsive">
            <table class="table">
                <thead><tr><th>Summa</th><th>Kategori</th><th>Underkatekori</th><th colspan="2">Beskrivning</th></tr></thead>
                @foreach (var b in Model)
                {
                    <tr><td>@b.Amount.ToString("n2")</td><td>@b.Category.Name</td><td>@b.SubCategory.Name</td><td>@b.Description</td><td id=""><a href="/manadsbetalningar/redigera/@b.MonthlyBillID"><img src="~/Static/Images/icon_edit.png" /></a></td></tr>
                }
            </table>
        </div>
    </div>
</div>
